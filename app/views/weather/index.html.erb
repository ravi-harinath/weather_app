<div class="bg-white p-6 rounded shadow">
  <%= form_with url: weather_path, method: :post, local: true do |f| %>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <%= label_tag :postal_code, 'Postal code', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_field_tag :postal_code, nil, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm' %>
      </div>
      <div>
        <%= label_tag :address, 'Address (optional)', class: 'block text-sm font-medium text-gray-700' %>
        <%= text_field_tag :address, nil, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm' %>
      </div>
    </div>
    <div class="mt-4">
      <%= submit_tag 'Get Forecast', class: 'px-4 py-2 bg-blue-600 text-white rounded' %>
    </div>
  <% end %>
</div>
